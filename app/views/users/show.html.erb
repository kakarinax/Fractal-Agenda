<div class="container">
  <div class="row justify-content-md-center">
    <div class='card shadow rounded pt-4 mt-3' style="width: 30em;">
      <div class="card-header">
        <h3 class="card-title text-center">
          User
        </h3>
      </div>
      <div class='card-body'>
        <h5 class='card-title'>
          Name: <%= @current_user.name %>
        </h5>
        <p class='card-text'>
          Email: <%= @current_user.email %>
        </p>
        <div class="col-12 justify-content-md-center">
        <%= link_to "Create new contact", new_contact_path, class:"btn btn-primary pr-3", style:"width: 65%" %>
        <% if @current_user.contacts.present? %> 
          <%= link_to "Contacts", contacts_path, class:"btn btn-primary pr-4", style:"width: 33%;" %>
        <% end %>
        </div>
        <div class="row mt-3 justify-content-md-center">
          <%= link_to "Log out", destroy_user_session_path, method: :delete, class:"btn btn-outline-primary", style:"width: 95%;"%>
        </div>
      </div>
    </div>
  </div>
  <br/>
</div>


           

        
